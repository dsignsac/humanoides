---
import Layout from "../layouts/Layout.astro";
---

<Layout title="404 // NO ENCONTRADO" showNavbar={false} showFooter={false}>
  <main
    class="w-full h-screen bg-brand-red flex flex-col items-center justify-center overflow-hidden"
  >
    <div class="relative z-10 text-center px-6">
      <h1
        class="text-[clamp(4rem,20vw,240px)] font-sans font-800 text-[#D4DAD3] leading-none tracking-tighter mb-8"
      >
        404
      </h1>

      <p
        class="text-xl md:text-2xl font-sans font-500 uppercase tracking-[0.3em] text-[#D4DAD3] mb-12"
      >
        // ERROR: RUTA_NO_SINCRO
      </p>

      <a
        href="/"
        class="inline-block px-12 py-5 border-[3px] border-[#D4DAD3] text-[#D4DAD3] font-sans font-800 uppercase tracking-widest hover:bg-[#D4DAD3] hover:text-brand-red transition-all duration-300"
      >
        VOLVER AL INICIO
      </a>
    </div>
  </main>
</Layout>

