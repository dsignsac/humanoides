---
import Layout from "../layouts/Layout.astro";
import AnimatedLogo from "../components/AnimatedLogo.astro";
import BrandLoader from "../components/BrandLoader.astro";
---

<Layout title="Brand identity | Humanoides & Asociados">
    <BrandLoader />
    <main class="min-h-screen bg-brand-gray p-8 md:p-16 flex flex-col gap-16">
        <!-- Header -->
        <header class="max-w-4xl">
            <h1 class="text-5xl font-sans mb-4">Brand System</h1>
            <p class="text-xl opacity-80 max-w-2xl text-brand-black">
                Visualización de la identidad dinámica y cromática de Humanoides
                & Asociados.
            </p>
        </header>

        <!-- 1. Motion Showcase -->
        <section>
            <h2
                class="text-xs uppercase tracking-widest opacity-50 mb-8 font-mono"
            >
                01. Dynamic Elements
            </h2>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                <!-- Loop -->
                <div
                    class="bg-brand-salmon/30 p-12 rounded-[2.5rem] border border-brand-salmon shadow-sm flex flex-col items-center justify-center aspect-square md:aspect-video"
                >
                    <AnimatedLogo mode="loop" variant="full" />
                    <span class="mt-8 text-xs font-mono opacity-40"
                        >Loop Sequence</span
                    >
                </div>
                <!-- Retractable -->
                <div
                    class="bg-brand-black p-12 rounded-[2.5rem] flex flex-col items-center justify-center aspect-square md:aspect-video text-brand-salmon"
                >
                    <div class="w-64">
                        <AnimatedLogo
                            mode="retractable"
                            variant="iso"
                            color="var(--color-brand-salmon)"
                        />
                    </div>
                    <span class="mt-8 text-xs font-mono opacity-40"
                        >Retractable Isotype (Fluido)</span
                    >
                </div>
            </div>
        </section>

        <!-- 2. Static Chromatic Variants -->
        <section>
            <h2
                class="text-xs uppercase tracking-widest opacity-50 mb-8 font-mono"
            >
                02. Chromatic Variants (Static)
            </h2>
            <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
                <!-- Red on Gray -->
                <div
                    class="bg-brand-gray border border-black/5 p-8 rounded-3xl flex flex-col items-center gap-4"
                >
                    <AnimatedLogo
                        mode="static"
                        variant="iso"
                        color="var(--color-brand-red)"
                        class="pointer-events-none"
                    />
                    <span
                        class="text-[10px] font-mono opacity-50 tracking-tighter"
                        >RED ON GRAY</span
                    >
                </div>
                <!-- Black on Salmon -->
                <div
                    class="bg-brand-salmon p-8 rounded-3xl flex flex-col items-center gap-4 text-brand-black"
                >
                    <AnimatedLogo
                        mode="static"
                        variant="iso"
                        color="currentColor"
                        class="pointer-events-none"
                    />
                    <span
                        class="text-[10px] font-mono opacity-50 tracking-tighter"
                        >BLACK ON SALMON</span
                    >
                </div>
                <!-- White on Red -->
                <div
                    class="bg-brand-red p-8 rounded-3xl flex flex-col items-center gap-4 text-white"
                >
                    <AnimatedLogo
                        mode="static"
                        variant="iso"
                        color="currentColor"
                        class="pointer-events-none"
                    />
                    <span
                        class="text-[10px] font-mono opacity-50 tracking-tighter"
                        >WHITE ON RED</span
                    >
                </div>
                <!-- Gray on Black -->
                <div
                    class="bg-brand-black p-8 rounded-3xl flex flex-col items-center gap-4 text-brand-gray"
                >
                    <AnimatedLogo
                        mode="static"
                        variant="iso"
                        color="currentColor"
                        class="pointer-events-none"
                    />
                    <span
                        class="text-[10px] font-mono opacity-50 tracking-tighter"
                        >GRAY ON BLACK</span
                    >
                </div>
            </div>
            <!-- Full Logos Static -->
            <div class="mt-8 space-y-6">
                <div
                    class="bg-white p-8 rounded-[2rem] border border-black/5 flex justify-center"
                >
                    <AnimatedLogo
                        mode="static"
                        variant="full"
                        color="var(--color-brand-black)"
                    />
                </div>
                <div
                    class="bg-brand-black p-8 rounded-[2rem] flex justify-center text-brand-salmon"
                >
                    <AnimatedLogo
                        mode="static"
                        variant="full"
                        color="currentColor"
                    />
                </div>
            </div>
        </section>

        <!-- 3. Typography -->
        <section>
            <h2
                class="text-xs uppercase tracking-widest opacity-50 mb-8 font-mono"
            >
                03. Typography & Typeface
            </h2>
            <div
                class="grid grid-cols-1 lg:grid-cols-2 gap-16 bg-white/50 p-12 rounded-[2.5rem] border border-black/5 backdrop-blur-md"
            >
                <!-- Sans: Anek Malayalam -->
                <div class="space-y-6">
                    <span
                        class="text-xs font-mono px-3 py-1 bg-brand-red text-white rounded-full"
                        >Primary: Anek Malayalam</span
                    >
                    <div class="font-sans">
                        <div
                            class="text-8xl font-bold leading-[0.8] mb-4 tracking-tighter"
                        >
                            AaBbCc
                        </div>
                        <div
                            class="text-4xl font-bold leading-none mb-8 opacity-80 mt-8"
                        >
                            Humanoides & Asociados
                        </div>
                        <p class="text-sm opacity-60 leading-relaxed max-w-sm">
                            Utilizada para el logotipo y encabezados. Una
                            tipografía sans-serif con personalidad técnica y
                            curvas precisas. Peso Bold (700) para impacto
                            jerárquico.
                        </p>
                    </div>
                </div>
                <!-- Mono: Kode Mono -->
                <div class="space-y-6 lg:border-l lg:border-black/5 lg:pl-16">
                    <span
                        class="text-xs font-mono px-3 py-1 bg-brand-black text-brand-salmon rounded-full"
                        >Secondary: Kode Mono</span
                    >
                    <div class="font-mono">
                        <div
                            class="text-7xl font-bold leading-[0.8] mb-4 tracking-tighter"
                        >
                            012345
                        </div>
                        <div class="text-3xl leading-none mb-8 mt-8 uppercase">
                            Digital Precision
                        </div>
                        <p class="text-sm opacity-60 leading-relaxed max-w-sm">
                            Tipografía monoespaciada para metadatos, etiquetas y
                            elementos técnicos de la interfaz. Refuerza el
                            concepto de "humanoide" y codificación.
                        </p>
                    </div>
                </div>
            </div>
        </section>

        <!-- 4. Color Palette Detail -->
        <section>
            <h2
                class="text-xs uppercase tracking-widest opacity-50 mb-8 font-mono"
            >
                04. Color Swatches
            </h2>
            <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
                <div class="group">
                    <div
                        class="h-40 bg-brand-red rounded-2xl shadow-sm mb-4 transition-transform group-hover:-translate-y-2"
                    >
                    </div>
                    <p class="text-sm font-mono font-bold uppercase">
                        Brand Red
                    </p>
                    <p class="text-xs font-mono opacity-50">#FA2A2A</p>
                </div>
                <div class="group">
                    <div
                        class="h-40 bg-brand-salmon rounded-2xl shadow-sm border border-black/5 mb-4 transition-transform group-hover:-translate-y-2"
                    >
                    </div>
                    <p class="text-sm font-mono font-bold uppercase">
                        Soft Salmon
                    </p>
                    <p class="text-xs font-mono opacity-50">#FFEEDB</p>
                </div>
                <div class="group">
                    <div
                        class="h-40 bg-brand-gray rounded-2xl shadow-sm border border-black/5 mb-4 transition-transform group-hover:-translate-y-2"
                    >
                    </div>
                    <p class="text-sm font-mono font-bold uppercase">
                        Metric Gray
                    </p>
                    <p class="text-xs font-mono opacity-50">#D4DAD3</p>
                </div>
                <div class="group">
                    <div
                        class="h-40 bg-brand-black rounded-2xl shadow-sm mb-4 transition-transform group-hover:-translate-y-2"
                    >
                    </div>
                    <p class="text-sm font-mono font-bold uppercase">
                        Void Black
                    </p>
                    <p class="text-xs font-mono opacity-50">#2F2F2F</p>
                </div>
            </div>
        </section>
    </main>
</Layout>

<style>
    /* Desactivar animaciones para los logos estáticos si es necesario */
    .pointer-events-none :global(svg) {
        pointer-events: none;
    }
</style>
