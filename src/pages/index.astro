---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Humanoides & Asociados | Eficiencia Disruptiva">
    <main class="w-full bg-brand-gray text-brand-black">
        <!-- Hero Section with Background Image -->
        <section
            id="hero"
            class="relative w-full h-[100dvh] md:h-screen flex flex-col mt-0"
        >
            <!-- Background Image -->
            <div class="absolute inset-0 z-0">
                <img
                    src="/hero_studio.png"
                    alt="Industrial Creative Studio"
                    class="w-full h-full object-cover opacity-70"
                />
            </div>

            <!-- Horizontal Gradient Overlay for Text Readability -->
            <div
                class="absolute inset-0 z-[5] bg-gradient-to-r from-transparent via-brand-gray/50 to-brand-gray/95"
            >
            </div>

            <!-- Main Content Container -->
            <div
                id="core"
                class="relative z-10 flex-1 flex flex-col justify-center items-center p-6 pt-20 md:pt-28 lg:pt-32 xl:pt-56 pb-8 md:pb-12 xl:pb-24"
            >
                <div
                    class="max-w-[1440px] w-full text-center md:text-right px-6 md:px-24"
                >
                    <h1
                        class="font-sans font-bold text-brand-red mb-6 md:mb-12"
                        style="font-size: clamp(2.869rem, 12vw, 130px); line-height: .9; letter-spacing: -0.04em;"
                    >
                        Make Internet<br />Work Again
                    </h1>
                    <p
                        class="text-xl md:text-[32px] md:leading-[36px] font-500 max-w-md md:max-w-2xl mx-auto md:mx-0 md:ml-auto text-brand-black/90 mb-3 md:mb-8"
                    >
                        Somos un profesional y sus agentes, listos para producir
                        tu próximo éxito digital.
                    </p>
                </div>
            </div>

            <!-- Brand Logos Marquee - Red Background -->
            <div
                class="relative z-10 w-full bg-brand-red py-6 md:py-8 border-t border-white/10 overflow-hidden"
            >
                <div class="flex animate-marquee whitespace-nowrap">
                    {
                        [...Array(3)].map(() => (
                            <>
                                <img
                                    src="/marcas/dataStream.svg"
                                    alt="DataStream"
                                    class="h-6 md:h-8 lg:h-[30px] w-auto mx-8 md:mx-[45px] logo-gray"
                                />
                                <img
                                    src="/marcas/hilton.svg"
                                    alt="Hilton Garden Inn"
                                    class="h-6 md:h-8 lg:h-[30px] w-auto mx-8 md:mx-[45px] logo-gray"
                                />
                                <img
                                    src="/marcas/ELA.svg"
                                    alt="ELA"
                                    class="h-6 md:h-8 lg:h-[30px] w-auto mx-8 md:mx-[45px] logo-gray"
                                />
                                <img
                                    src="/marcas/logo.svg"
                                    alt="Los Mirlos"
                                    class="h-6 md:h-8 lg:h-[30px] w-auto mx-8 md:mx-[45px] logo-gray"
                                />
                                <img
                                    src="/marcas/monsterlink.svg"
                                    alt="Monster Link"
                                    class="h-6 md:h-8 lg:h-[30px] w-auto mx-8 md:mx-[45px] logo-gray"
                                />
                            </>
                        ))
                    }
                </div>
            </div>
        </section>
    </main>

    <style>
        @keyframes marquee {
            0% {
                transform: translateX(0);
            }
            100% {
                transform: translateX(-33.333%);
            }
        }

        .animate-marquee {
            animation: marquee 20s linear infinite;
            width: max-content;
        }

        .logo-gray {
            filter: invert(91%) sepia(3%) saturate(143%) hue-rotate(65deg)
                brightness(91%) contrast(90%);
        }
    </style>
</Layout>
