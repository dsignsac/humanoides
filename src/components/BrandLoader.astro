---
import AnimatedLogo from "./AnimatedLogo.astro";
---

<div
    id="brand-loader"
    class="fixed inset-0 z-[100] bg-brand-red flex flex-col items-center justify-center transition-opacity duration-700"
>
    <div class="w-32 md:w-48 mb-6">
        <AnimatedLogo mode="retractable" variant="iso" color="#FFF" />
    </div>
    <div class="overflow-hidden">
        <p
            class="font-sans text-xs uppercase tracking-[0.3em] text-brand-salmon/60 animate-pulse"
        >
            Humanoides Experience
        </p>
    </div>
</div>

<script>
    // Simple loader logic
    window.addEventListener("load", () => {
        const loader = document.getElementById("brand-loader");
        if (loader) {
            setTimeout(() => {
                loader.style.opacity = "0";
                setTimeout(() => {
                    loader.style.display = "none";
                }, 700);
            }, 1000); // Mínimo de 1s para que se vea la animación
        }
    });
</script>
