<form id="sync-form" class="w-full flex flex-col gap-6 font-sans">
  <div class="flex flex-col gap-2">
    <label
      for="name"
      class="text-xs font-bold tracking-widest uppercase text-brand-black"
      >Identidad (Nombre)</label
    >
    <input
      type="text"
      id="name"
      name="name"
      required
      class="w-full bg-transparent border-b border-brand-black/40 py-2 text-brand-black focus:outline-none focus:border-brand-red transition-colors text-sm placeholder:text-brand-black/30"
      placeholder="INGRESAR ID..."
    />
  </div>

  <div class="flex flex-col gap-2">
    <label
      for="email"
      class="text-xs font-bold tracking-widest uppercase text-brand-black"
      >Punto de Contacto (Email)</label
    >
    <input
      type="email"
      id="email"
      name="email"
      required
      class="w-full bg-transparent border-b border-brand-black/40 py-2 text-brand-black focus:outline-none focus:border-brand-red transition-colors text-sm placeholder:text-brand-black/30"
      placeholder="INGRESAR FRECUENCIA..."
    />
  </div>

  <div class="flex flex-col gap-2">
    <label
      for="message"
      class="text-xs font-bold tracking-widest uppercase text-brand-black"
      >Transmisi√≥n (Mensaje)</label
    >
    <textarea
      id="message"
      name="message"
      rows="3"
      required
      class="w-full bg-transparent border-b border-brand-black/40 py-2 text-brand-black focus:outline-none focus:border-brand-red transition-colors text-sm resize-none placeholder:text-brand-black/30"
      placeholder="INGRESAR DATOS..."></textarea>
  </div>

  <button
    type="submit"
    class="mt-4 w-full md:w-auto self-start inline-flex items-center justify-center px-8 py-3 bg-brand-black text-brand-gray text-xs font-900 uppercase tracking-widest hover:bg-brand-red hover:text-white transition-all duration-300 rounded-full"
  >
    Sincronizar Ahora
  </button>
</form>

<script>
  const form = document.getElementById("sync-form") as HTMLFormElement;

  form?.addEventListener("submit", (e) => {
    e.preventDefault();

    const formData = new FormData(form);
    const name = formData.get("name");
    const email = formData.get("email");
    const message = formData.get("message");

    const text = `Hola Humanoides y Asociados! \n\nSoy ${name}.\nMi contacto: ${email}\n\nMensaje: ${message}`;
    const encodedText = encodeURIComponent(text);
    const whatsappUrl = `https://api.whatsapp.com/send?phone=34627191859&text=${encodedText}`;

    window.open(whatsappUrl, "_blank");

    // Optional: clear form
    form.reset();
  });
</script>
