      <div class="col-span-6">CLIENTE / PROYECTO</div>
      <div class="col-span-3">SERVICIO</div>
    </div>

    <!-- Project Rows -->
    {projects.map((project) => (
      <article class="article-row group relative border-b border-brand-black/10 transition-all duration-300 hover:bg-brand-salmon overflow-hidden md:hover:rounded-2xl md:mx-2">

        <!-- Link Wrapper -->
        <a href={project.url} class="block w-full h-full relative z-10">
            <div class="grid grid-cols-1 md:grid-cols-12 gap-4 px-6 py-4 md:py-12 items-center">
            
            <!-- YEAR -->
            <div class="col-span-1 font-mono text-xs opacity-60 transition-opacity duration-300">
                '{project.year.slice(2)}
            </div>

            <!-- LOCALIZACIÓN -->
            <div class="hidden md:flex col-span-2 items-center gap-2 font-mono text-[10px] uppercase tracking-widest z-20 relative transition-opacity duration-300">
                <span class="w-1.5 h-1.5 rounded-full bg-brand-red"></span>
                {project.country}
            </div>

            <!-- Client & Project -->
            <div class="col-span-11 md:col-span-6 mb-1 md:mb-0">
                <h3 class="text-3xl md:text-5xl font-sans font-900 leading-[0.9] capitalize text-brand-black group-hover:text-brand-red transition-colors duration-300" style="will-change: color;">
                {project.client}
                </h3>
                <p class="text-base md:text-xl font-sans font-semibold text-brand-black mt-1 md:mt-2 capitalize tracking-wide">
                {project.project}
                </p>
            </div>

            <!-- Service (Desktop) -->
            <div class="hidden md:block col-span-3 font-mono text-xs uppercase tracking-wider opacity-70">
                [{project.service}]
            </div>

            <!-- Mobile: Combined Meta + CTA -->
            <div class="md:hidden col-span-11 flex flex-col gap-4 mt-4">
                <div class="flex flex-wrap gap-4 text-[10px] font-sans uppercase text-brand-black font-bold">
                    <span>{project.service}</span>
                    <span class="text-brand-red">|</span>
                    <span>{project.country}</span>
                </div>
                <div class="w-full py-3.5 bg-brand-black text-white text-[10px] font-sans font-900 uppercase tracking-[0.2em] flex items-center justify-center gap-2 rounded-full">
                    VER PROYECTO
                    <svg class="w-3 h-3" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="4">
                        <path d="M7 17L17 7M17 7H7M17 7V17" />
                    </svg>
                </div>
            </div>

            </div>
        </a>
      </article>
    ))}
  </div>
