---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Humanoides & Asociados | Eficiencia Disruptiva">
    <main class="w-full bg-brand-gray text-brand-black">
        <!-- Hero Section with Background Image -->
        <section
            id="hero"
            class="relative w-full h-screen flex flex-col mt-0 bg-brand-black"
        >
            <!-- Background Image -->
            <div class="absolute inset-0 z-0">
                <img
                    src="/hero_studio.png"
                    alt="Industrial Creative Studio"
                    class="w-full h-full object-cover opacity-30 grayscale"
                />
            </div>

            <!-- Horizontal Gradient Overlay for Text Readability -->
            <div
                class="absolute inset-0 z-[5] hidden md:block bg-gradient-to-r from-transparent via-brand-black/50 to-brand-black/95"
            >
            </div>

            <!-- Main Content Container -->
            <div
                id="core"
                class="relative z-10 flex-1 flex flex-col justify-center items-center pt-20 md:pt-28 lg:pt-32 xl:pt-56 pb-8 md:pb-12 xl:pb-24"
            >
                <div
                    class="max-w-[1440px] w-full text-center md:text-right px-6 md:px-0"
                >
                    <h1
                        class="font-sans font-bold text-brand-red mb-6 md:mb-12"
                        style="font-size: clamp(2.86rem, 12vw, 130px); line-height: .9; letter-spacing: -0.04em;"
                    >
                        Make Internet<br />Work Again
                    </h1>
                    <p
                        class="text-xl md:text-[32px] md:leading-[36px] font-500 max-w-md md:max-w-2xl mx-auto md:mx-0 md:ml-auto text-brand-gray mb-8 md:mb-12"
                    >
                        Somos un profesional y sus agentes, listos para producir
                        tu próximo éxito digital.
                    </p>

                    <div
                        class="flex justify-center md:justify-end mb-12 md:mb-0"
                    >
                        <a
                            href="#team"
                            class="group relative inline-flex items-center gap-3 px-8 py-4 bg-brand-red text-white font-sans font-500 uppercase tracking-widest text-sm transition-all duration-300 hover:bg-brand-black overflow-hidden rounded-full"
                        >
                            <span class="relative z-10">Ver Asociados</span>
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                class="w-5 h-5 relative z-10 transition-transform duration-300 group-hover:translate-y-1"
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="2"
                                stroke-linecap="round"
                                stroke-linejoin="round"
                            >
                                <path d="M12 5v14M19 12l-7 7-7-7"></path>
                            </svg>
                        </a>
                    </div>
                </div>
            </div>

            <!-- Brand Logos Marquee - Red Background -->
            <div
                class="relative z-10 w-full bg-brand-red py-6 md:py-8 border-t border-white/10 overflow-hidden"
            >
                <div class="flex animate-marquee whitespace-nowrap">
                    {
                        [...Array(3)].map(() => (
                            <>
                                <img
                                    src="/marcas/dataStream.svg"
                                    alt="DataStream"
                                    class="h-6 md:h-8 lg:h-[30px] w-auto mx-8 md:mx-[45px] logo-gray"
                                />
                                <img
                                    src="/marcas/hilton.svg"
                                    alt="Hilton Garden Inn"
                                    class="h-6 md:h-8 lg:h-[30px] w-auto mx-8 md:mx-[45px] logo-gray"
                                />
                                <img
                                    src="/marcas/ELA.svg"
                                    alt="ELA"
                                    class="h-6 md:h-8 lg:h-[30px] w-auto mx-8 md:mx-[45px] logo-gray"
                                />
                                <img
                                    src="/marcas/logo.svg"
                                    alt="Los Mirlos"
                                    class="h-6 md:h-8 lg:h-[30px] w-auto mx-8 md:mx-[45px] logo-gray"
                                />
                                <img
                                    src="/marcas/monsterlink.svg"
                                    alt="Monster Link"
                                    class="h-6 md:h-8 lg:h-[30px] w-auto mx-8 md:mx-[45px] logo-gray"
                                />
                            </>
                        ))
                    }
                </div>
            </div>
        </section>

        <!-- Team Section -->
        <section
            id="team"
            class="relative w-full py-32 border-b border-brand-black/10"
        >
            <div class="max-w-[1440px] mx-auto w-full px-6 md:px-0">
                <div
                    class="flex flex-col md:flex-row justify-between items-end mb-24 gap-8"
                >
                    <div>
                        <span
                            class="text-xs font-mono uppercase tracking-[0.3em] text-brand-red mb-4 block"
                            >Corporate Structure</span
                        >
                        <h2
                            class="text-6xl md:text-8xl font-sans font-800 tracking-tighter text-brand-black leading-[0.85]"
                        >
                            Altamente<br /><span class="text-brand-red"
                                >Inteligentes</span
                            >
                        </h2>
                    </div>
                    <p
                        class="text-brand-black/60 max-w-md text-lg leading-relaxed font-300"
                    >
                        Una fuerza laboral híbrida optimizada para la
                        eficiencia, el sarcasmo corporativo y resultados
                        disruptivos.
                    </p>
                </div>

                <div
                    class="grid grid-cols-1 md:grid-cols-3 lg:grid-cols-5 gap-8"
                >
                    <!-- 1. David (CEO) -->
                    <div class="group">
                        <div
                            class="aspect-[3/4] w-full overflow-hidden bg-white relative mb-6 rounded-[2rem]"
                        >
                            <img
                                src="/miembros/chad.png"
                                alt="David Salcedo"
                                class="w-full h-full object-cover object-top"
                            />
                        </div>
                        <h3
                            class="text-2xl font-sans font-700 text-brand-black uppercase tracking-tight"
                        >
                            David
                        </h3>
                        <p
                            class="text-xs font-mono text-brand-black/50 uppercase tracking-widest mt-1"
                        >
                            Founder & CEO
                        </p>
                    </div>

                    <!-- 2. Chad (Associate) -->
                    <div class="group">
                        <div
                            class="aspect-[3/4] w-full overflow-hidden bg-white relative mb-6 rounded-[2rem]"
                        >
                            <img
                                src="/miembros/chad.png"
                                alt="Chad"
                                class="w-full h-full object-cover object-top"
                            />
                        </div>
                        <h3
                            class="text-2xl font-sans font-700 text-brand-black uppercase tracking-tight"
                        >
                            Chad
                        </h3>
                        <p
                            class="text-xs font-mono text-brand-black/50 uppercase tracking-widest mt-1"
                        >
                            Senior Associate
                        </p>
                    </div>

                    <!-- 3. Gemma (Associate) -->
                    <div class="group">
                        <div
                            class="aspect-[3/4] w-full overflow-hidden bg-white relative mb-6 rounded-[2rem]"
                        >
                            <img
                                src="/miembros/gemma.png"
                                alt="Gemma"
                                class="w-full h-full object-cover object-top"
                            />
                        </div>
                        <h3
                            class="text-2xl font-sans font-700 text-brand-black uppercase tracking-tight"
                        >
                            Gemma
                        </h3>
                        <p
                            class="text-xs font-mono text-brand-black/50 uppercase tracking-widest mt-1"
                        >
                            Operations
                        </p>
                    </div>

                    <!-- 4. Claudio (Associate) -->
                    <div class="group">
                        <div
                            class="aspect-[3/4] w-full overflow-hidden bg-white relative mb-6 rounded-[2rem]"
                        >
                            <img
                                src="/miembros/claudio.png"
                                alt="Claudio"
                                class="w-full h-full object-cover object-top"
                            />
                        </div>
                        <h3
                            class="text-2xl font-sans font-700 text-brand-black uppercase tracking-tight"
                        >
                            Claudio
                        </h3>
                        <p
                            class="text-xs font-mono text-brand-black/50 uppercase tracking-widest mt-1"
                        >
                            Strategic Planning
                        </p>
                    </div>

                    <!-- 5. Connie (Associate) -->
                    <div class="group">
                        <div
                            class="aspect-[3/4] w-full overflow-hidden bg-white relative mb-6 rounded-[2rem]"
                        >
                            <img
                                src="/miembros/connie.png"
                                alt="Connie"
                                class="w-full h-full object-cover object-top"
                            />
                        </div>
                        <h3
                            class="text-2xl font-sans font-700 text-brand-black uppercase tracking-tight"
                        >
                            Connie
                        </h3>
                        <p
                            class="text-xs font-mono text-brand-black/50 uppercase tracking-widest mt-1"
                        >
                            Design & Art
                        </p>
                    </div>
                </div>
            </div>

            <style>
                @keyframes marquee {
                    0% {
                        transform: translateX(0);
                    }
                    100% {
                        transform: translateX(-33.333%);
                    }
                }

                .animate-marquee {
                    animation: marquee 20s linear infinite;
                    width: max-content;
                }

                .logo-gray {
                    filter: invert(91%) sepia(3%) saturate(143%)
                        hue-rotate(65deg) brightness(91%) contrast(90%);
                }
            </style>
        </section>
    </main></Layout
>
