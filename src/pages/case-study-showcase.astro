  gsap.registerPlugin(ScrollTrigger);

  const initBrutalistCase = () => {
    // Hero Reveal: Staggered and rigid
    gsap.from("h1 span", {
      y: "100%",
      duration: 0.8,
      ease: "expo.out",
      stagger: 0.2,
    });

    gsap.from(".hero-desc", {
      opacity: 0,
      x: -20,
      duration: 1,
      delay: 0.5,
      ease: "power2.out",
    });

    // Schematic Animation
    gsap.from(".module-node", {
      scale: 0,
      opacity: 0,
      duration: 1,
      stagger: 0.2,
      ease: "back.out(1.7)",
      scrollTrigger: {
        trigger: ".architecture-section",
        start: "top 70%",
      },
    });

    // Horizontal Scroll: Rigid Ease
    const wrapper = document.querySelector(".metrics-wrapper");
    if (wrapper) {
      gsap.to(wrapper, {
        x: () => -(wrapper.scrollWidth - window.innerWidth),
        ease: "none",
        scrollTrigger: {
          trigger: ".metrics-horizontal-section",
          start: "top top",
          end: () => `+=${wrapper.scrollWidth}`,
          scrub: 1,
          pin: true,
          anticipatePin: 1,
        },
      });
    }

    // Staggered lists entry
    gsap.utils
      .toArray(".process-step-item, .solution-card")
      .forEach((item: any) => {
        gsap.from(item, {
          opacity: 0,
          y: 30,
          duration: 0.8,
          scrollTrigger: {
            trigger: item,
            start: "top 90%",
          },
        });
      });
  };

  document.addEventListener("DOMContentLoaded", initBrutalistCase);
  document.addEventListener("astro:after-swap", initBrutalistCase);
</script>

