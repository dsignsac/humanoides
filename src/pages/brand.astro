---
import Layout from "../layouts/Layout.astro";
import AnimatedLogo from "../components/AnimatedLogo.astro";
---

<Layout title="Brand Guidelines | Humanoides & Asociados">
    <main
        class="min-h-screen bg-brand-black flex flex-col gap-16 md:gap-32 pt-24 md:pt-32 text-brand-gray"
    >
        <!-- Header -->
        <header class="max-w-[1240px] mx-auto w-full px-6 md:px-12">
            <div class="w-full">
                <h1
                    class="text-6xl md:text-9xl font-sans mb-6 tracking-tighter text-brand-red leading-[0.85]"
                >
                    Visual Identity
                </h1>
                <p
                    class="text-xl md:text-3xl opacity-90 max-w-3xl text-brand-gray leading-tight"
                >
                    Sistemas visuales, cromáticos y dinámicos que definen la
                    esencia de Humanoides.
                </p>
            </div>
        </header>

        <!-- 1. Motion Showcase -->
        <section class="max-w-[1240px] mx-auto w-full px-6 md:px-12">
            <h2
                class="text-xs uppercase tracking-[0.3em] opacity-50 mb-10 font-mono"
            >
                01. Dynamic Elements
            </h2>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6 md:gap-12">
                <div
                    class="bg-brand-salmon/30 p-12 rounded-[2.5rem] border border-brand-salmon shadow-sm flex flex-col items-center justify-center aspect-square md:aspect-video"
                >
                    <AnimatedLogo mode="loop" variant="full" />
                    <span
                        class="mt-8 text-xs font-mono opacity-40 text-brand-black/60 tracking-widest"
                        >Loop Sequence</span
                    >
                </div>
                <div
                    class="bg-brand-black p-12 rounded-[2.5rem] flex flex-col items-center justify-center aspect-square md:aspect-video text-brand-salmon"
                >
                    <div class="w-full max-w-sm transition-all duration-500">
                        <AnimatedLogo
                            mode="retractable"
                            variant="iso"
                            color="var(--color-brand-salmon)"
                        />
                    </div>
                    <span
                        class="mt-8 text-xs font-mono opacity-40 tracking-widest"
                        >Retractable Isotype</span
                    >
                </div>
            </div>
        </section>

        <!-- 2. Static Chromatic Variants -->
        <section class="max-w-[1240px] mx-auto w-full px-6 md:px-12">
            <h2
                class="text-xs uppercase tracking-[0.3em] opacity-50 mb-10 font-mono"
            >
                02. Chromatic Variants
            </h2>
            <div class="grid grid-cols-2 md:grid-cols-4 gap-4 md:gap-6">
                <!-- Red on Gray -->
                <div
                    class="bg-brand-gray/5 border border-white/5 p-8 md:p-12 rounded-3xl md:rounded-[2.5rem] flex flex-col items-center gap-6 transition-all hover:bg-white/10"
                >
                    <AnimatedLogo
                        mode="static"
                        variant="iso"
                        color="var(--color-brand-red)"
                        class="pointer-events-none w-16 md:w-24"
                    />
                    <span
                        class="text-[10px] font-mono opacity-50 tracking-tighter"
                        >RED ON GRAY</span
                    >
                </div>
                <!-- Black on Salmon -->
                <div
                    class="bg-brand-salmon p-8 md:p-12 rounded-3xl md:rounded-[2.5rem] flex flex-col items-center gap-6 text-brand-black transition-all hover:bg-brand-salmon/80"
                >
                    <AnimatedLogo
                        mode="static"
                        variant="iso"
                        color="currentColor"
                        class="pointer-events-none w-16 md:w-24"
                    />
                    <span
                        class="text-[10px] font-mono opacity-50 tracking-tighter"
                        >BLACK ON SALMON</span
                    >
                </div>
                <!-- White on Red -->
                <div
                    class="bg-brand-red p-8 md:p-12 rounded-3xl md:rounded-[2.5rem] flex flex-col items-center gap-6 text-white transition-all hover:bg-brand-red/90"
                >
                    <AnimatedLogo
                        mode="static"
                        variant="iso"
                        color="currentColor"
                        class="pointer-events-none w-16 md:w-24"
                    />
                    <span
                        class="text-[10px] font-mono opacity-50 tracking-tighter"
                        >WHITE ON RED</span
                    >
                </div>
                <!-- Gray on Black -->
                <div
                    class="bg-brand-black p-8 md:p-12 rounded-3xl md:rounded-[2.5rem] flex flex-col items-center gap-6 text-brand-gray transition-all hover:bg-brand-black/90"
                >
                    <AnimatedLogo
                        mode="static"
                        variant="iso"
                        color="currentColor"
                        class="pointer-events-none w-16 md:w-24"
                    />
                    <span
                        class="text-[10px] font-mono opacity-50 tracking-tighter"
                        >GRAY ON BLACK</span
                    >
                </div>
            </div>
            <!-- Full Logos Static -->
            <div class="mt-8 space-y-4 md:space-y-6">
                <div
                    class="bg-brand-gray/5 p-12 md:p-20 rounded-[2.5rem] md:rounded-[3rem] border border-white/5 flex justify-center transition-all hover:shadow-lg"
                >
                    <div class="w-full max-w-xl">
                        <AnimatedLogo
                            mode="static"
                            variant="full"
                            color="var(--color-brand-gray)"
                        />
                    </div>
                </div>
                <div
                    class="bg-brand-black p-12 md:p-20 rounded-[2.5rem] md:rounded-[3rem] flex justify-center text-brand-salmon transition-all hover:shadow-lg"
                >
                    <div class="w-full max-w-xl">
                        <AnimatedLogo
                            mode="static"
                            variant="full"
                            color="currentColor"
                        />
                    </div>
                </div>
            </div>
        </section>

        <!-- 3. Typography -->
        <section class="max-w-[1240px] mx-auto w-full px-6 md:px-12">
            <h2
                class="text-xs uppercase tracking-[0.3em] opacity-50 mb-14 font-mono"
            >
                03. Typography
            </h2>
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 md:gap-24">
                <!-- Sans: Anek Malayalam -->
                <div
                    class="relative flex flex-col border-b border-white/5 pb-16 lg:border-b-0 lg:pb-0"
                >
                    <div
                        class="absolute -top-5 left-10 z-10 transition-transform hover:scale-105"
                    >
                        <span
                            class="text-[10px] md:text-sm font-mono px-5 py-2 bg-brand-red text-white rounded-xl shadow-lg font-bold block"
                            >Primary: Anek Malayalam</span
                        >
                    </div>
                    <div
                        class="bg-brand-gray/5 p-10 md:p-16 pt-20 rounded-[3rem] border border-white/5 backdrop-blur-sm flex-grow"
                    >
                        <div class="font-sans">
                            <div
                                class="text-[min(22vw,160px)] font-bold leading-[0.7] mb-12 tracking-tighter"
                            >
                                AaBbCc
                            </div>
                            <div
                                class="text-4xl md:text-7xl font-bold leading-[0.9] mb-12 opacity-90 text-brand-gray"
                            >
                                Humanoides & Asociados
                            </div>
                            <p
                                class="text-base md:text-xl opacity-70 leading-relaxed"
                            >
                                Utilizada para el logotipo y encabezados. Una
                                tipografía sans-serif con personalidad técnica y
                                curvas precisas. Peso Bold (700) para impacto
                                jerárquico.
                            </p>
                        </div>
                    </div>
                </div>
                <!-- Mono: Kode Mono -->
                <div class="relative flex flex-col">
                    <div
                        class="absolute -top-5 left-10 z-10 transition-transform hover:scale-105"
                    >
                        <span
                            class="text-[10px] md:text-sm font-mono px-5 py-2 bg-brand-black text-brand-salmon rounded-xl shadow-lg font-bold block"
                            >Secondary: Kode Mono</span
                        >
                    </div>
                    <div
                        class="bg-brand-gray/5 p-10 md:p-16 pt-20 rounded-[3rem] border border-white/5 backdrop-blur-sm flex-grow"
                    >
                        <div class="font-mono">
                            <div
                                class="text-[min(22vw,140px)] font-bold leading-[0.7] mb-12 tracking-tighter"
                            >
                                012345
                            </div>
                            <div
                                class="text-4xl md:text-7xl font-bold leading-[0.9] mb-12 uppercase opacity-90 text-brand-gray"
                            >
                                Digital Precision
                            </div>
                            <p
                                class="text-base md:text-xl opacity-70 leading-relaxed"
                            >
                                Tipografía monoespaciada para metadatos,
                                etiquetas y elementos técnicos de la interfaz.
                                Refuerza el concepto de "humanoide" y
                                codificación.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- 4. Color Palette Detail -->
        <section class="max-w-[1240px] mx-auto w-full px-6 md:px-12 mb-40">
            <h2
                class="text-xs uppercase tracking-[0.3em] opacity-50 mb-10 font-mono"
            >
                04. Color Swatches
            </h2>
            <div class="grid grid-cols-2 md:grid-cols-4 gap-4 md:gap-8">
                <div class="group">
                    <div
                        class="h-48 md:h-72 bg-brand-red rounded-3xl md:rounded-[2.5rem] shadow-md mb-6 transition-all group-hover:-translate-y-3 group-hover:shadow-2xl"
                    >
                    </div>
                    <p
                        class="text-base font-mono font-bold uppercase text-brand-gray tracking-wider"
                    >
                        Brand Red
                    </p>
                    <p class="text-sm font-mono opacity-50">#FA2A2A</p>
                </div>
                <div class="group">
                    <div
                        class="h-48 md:h-72 bg-brand-salmon rounded-3xl md:rounded-[2.5rem] shadow-md border border-black/5 mb-6 transition-all group-hover:-translate-y-3 group-hover:shadow-2xl"
                    >
                    </div>
                    <p
                        class="text-base font-mono font-bold uppercase text-brand-gray tracking-wider"
                    >
                        Soft Salmon
                    </p>
                    <p class="text-sm font-mono opacity-50">#FFEEDB</p>
                </div>
                <div class="group">
                    <div
                        class="h-48 md:h-72 bg-brand-gray rounded-3xl md:rounded-[2.5rem] shadow-md border border-black/5 mb-6 transition-all group-hover:-translate-y-3 group-hover:shadow-2xl"
                    >
                    </div>
                    <p
                        class="text-base font-mono font-bold uppercase text-brand-gray tracking-wider"
                    >
                        Metric Gray
                    </p>
                    <p class="text-sm font-mono opacity-50">#D4DAD3</p>
                </div>
                <div class="group">
                    <div
                        class="h-48 md:h-72 bg-brand-black rounded-3xl md:rounded-[2.5rem] shadow-md mb-6 transition-all group-hover:-translate-y-3 group-hover:shadow-2xl"
                    >
                    </div>
                    <p
                        class="text-base font-mono font-bold uppercase text-brand-gray tracking-wider"
                    >
                        Void Black
                    </p>
                    <p class="text-sm font-mono opacity-50">#2F2F2F</p>
                </div>
            </div>
        </section>
    </main>
</Layout>

<style>
    .pointer-events-none :global(svg) {
        pointer-events: none;
    }
</style>
