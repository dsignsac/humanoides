---
import Layout from "../layouts/Layout.astro";
import { Image } from "astro:assets";
import heroImage from "../assets/hero_studio.png";
import PortfolioSection from "../components/PortfolioSection.astro";

const logos = [
    { src: "/marcas/ELA.svg", alt: "ELA" },
    { src: "/marcas/dataStream.svg", alt: "Data Stream" },
    { src: "/marcas/hilton.svg", alt: "Hilton" },
    { src: "/marcas/logo.svg", alt: "Logo" },
    { src: "/marcas/monsterlink.svg", alt: "Monsterlink" },
];
---

<Layout title="Humanoides & Asociados | Eficiencia Disruptiva">
    <main class="w-full bg-brand-gray text-brand-black">
        <!-- Hero Section -->
        <section
            id="hero"
            class="relative w-full h-screen flex flex-col mt-0 bg-brand-black"
        >
            <!-- Background Image -->
            <div class="absolute inset-0 z-0">
                <Image
                    src={heroImage}
                    alt="Industrial Creative Studio"
                    class="w-full h-full object-cover opacity-80 grayscale"
                    loading="eager"
                    quality={80}
                    format="webp"
                />
            </div>
            <!-- Overlay: 70% brand-black (#2F2F2F) -->
            <div class="absolute inset-0 z-[5] bg-[#2F2F2F]/70"></div>

            <!-- CRT Effect Layer -->
            <div
                class="absolute inset-0 z-[6] pointer-events-none overflow-hidden opacity-30"
            >
                <!-- Scanlines -->
                <div
                    class="absolute inset-0 w-full h-full bg-[linear-gradient(rgba(18,16,16,0)_50%,rgba(0,0,0,0.25)_50%),linear-gradient(90deg,rgba(255,0,0,0.06),rgba(0,255,0,0.02),rgba(0,0,255,0.06))] bg-[length:100%_4px,3px_100%]"
                >
                </div>
                <!-- Flicker -->
                <div
                    class="absolute inset-0 w-full h-full bg-transparent animate-flicker pointer-events-none"
                >
                </div>
            </div>

            <!-- Content -->
            <div
                class="relative z-10 flex-1 flex flex-col justify-center items-center pt-32 md:pt-48 lg:pt-56 xl:pt-64 pb-32 md:pb-48"
            >
                <div
                    class="max-w-[1440px] w-full text-center md:text-right px-6"
                >
                    <h1
                        class="font-sans font-bold text-brand-red mb-6 md:mb-12"
                        style="font-size: clamp(3.5rem, 12vw, 180px); line-height: .9; letter-spacing: -0.04em;"
                    >
                        Make Internet<br />Work Again
                    </h1>
                    <p
                        class="text-xl md:text-[32px] md:leading-[36px] font-500 max-w-md md:max-w-2xl mx-auto md:mx-0 md:ml-auto text-brand-gray mb-8 md:mb-12"
                    >
                        Somos un Profesional y sus Ai-gentes, listos para
                        producir tu próximo éxito digital.
                    </p>
                    <div
                        class="flex justify-center md:justify-end mb-12 md:mb-0"
                    >
                        <a
                            href="#log"
                            class="group relative inline-flex items-center px-8 py-4 bg-transparent border border-brand-gray text-brand-gray font-sans font-800 uppercase tracking-widest text-sm transition-all duration-300 hover:border-brand-red hover:bg-brand-red hover:text-brand-gray overflow-hidden rounded-full"
                        >
                            <span class="relative z-10">Ver Proyectos</span>
                        </a>
                    </div>
                </div>
            </div>

            <!-- Logo Marquee Banner -->
            <div
                class="absolute bottom-0 left-0 w-full bg-brand-red py-4 md:py-6 z-20 overflow-hidden border-t border-white/10"
            >
                <div class="flex marquee-container">
                    <div
                        class="flex items-center gap-12 md:gap-24 animate-marquee whitespace-nowrap px-6"
                    >
                        {
                            [...logos, ...logos, ...logos].map((logo) => (
                                <div class="h-8 md:h-12 w-24 md:w-32 flex-shrink-0 flex items-center justify-center">
                                    <div
                                        class="w-full h-full bg-[#D4DAD3]"
                                        style={`
                                            mask: url(${logo.src}) no-repeat center;
                                            -webkit-mask: url(${logo.src}) no-repeat center;
                                            mask-size: contain;
                                            -webkit-mask-size: contain;
                                        `}
                                    />
                                </div>
                            ))
                        }
                    </div>
                    <div
                        class="flex items-center gap-12 md:gap-24 animate-marquee whitespace-nowrap px-6"
                        aria-hidden="true"
                    >
                        {
                            [...logos, ...logos, ...logos].map((logo) => (
                                <div class="h-8 md:h-12 w-24 md:w-32 flex-shrink-0 flex items-center justify-center">
                                    <div
                                        class="w-full h-full bg-[#D4DAD3]"
                                        style={`
                                            mask: url(${logo.src}) no-repeat center;
                                            -webkit-mask: url(${logo.src}) no-repeat center;
                                            mask-size: contain;
                                            -webkit-mask-size: contain;
                                        `}
                                    />
                                </div>
                            ))
                        }
                    </div>
                </div>
            </div>
        </section>

        <!-- PORTFOLIO / LOG SECTION -->
        <PortfolioSection />

        <!-- TEAM SECTION (CORE) -->
        <section
            id="core"
            class="relative w-full bg-brand-gray text-brand-black py-24 border-t border-brand-black/10"
        >
            <div class="max-w-[1440px] mx-auto w-full px-6 relative">
                <!-- Header (Divider Line Here) -->
                <div
                    class="flex flex-col md:flex-row justify-between items-start md:items-end mb-16 pb-8 border-b border-brand-black/10"
                >
                    <div>
                        <span
                            class="text-xs font-mono uppercase tracking-[0.3em] text-brand-red mb-4 block"
                            >// INDEX_02</span
                        >
                        <h2
                            class="text-5xl md:text-8xl font-sans font-800 tracking-tighter text-brand-black leading-[0.9] md:leading-[0.85]"
                        >
                            Equipo<br /><span class="text-brand-red"
                                >Principal</span
                            >
                        </h2>
                    </div>
                    <div class="hidden md:block text-right">
                        <p
                            class="text-[10px] font-mono uppercase tracking-widest opacity-60"
                        >
                            Human Resources Div.
                        </p>
                        <p
                            class="text-[10px] font-mono uppercase tracking-widest opacity-60"
                        >
                            System: v.1.0 (1998)
                        </p>
                    </div>
                </div>

                <!-- MEMBERS GRID (Simple Hover) -->
                <div
                    class="w-full grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-5 border-t border-l border-brand-black/10"
                >
                    {/* 1. David */}
                    <article
                        class="group relative border-r border-b border-brand-black/10 p-6 hover:bg-brand-salmon transition-colors duration-300"
                    >
                        <div class="flex justify-between items-start mb-4">
                            <span
                                class="font-mono text-[10px] text-brand-red opacity-60"
                                >REF: 001</span
                            >
                        </div>
                        <div
                            class="aspect-[3/4] w-full overflow-hidden mb-6 rounded-[1.5rem] bg-brand-black/5"
                        >
                            <img
                                src="/miembros/chad.png"
                                alt="David"
                                class="w-full h-full object-cover object-top"
                                loading="lazy"
                            />
                        </div>
                        <h3
                            class="text-lg font-sans font-bold uppercase text-brand-black"
                        >
                            David
                        </h3>
                        <p
                            class="text-[10px] font-mono uppercase tracking-widest opacity-60"
                        >
                            Founder & CEO
                        </p>
                    </article>

                    {/* 2. Chad */}
                    <article
                        class="group relative border-r border-b border-brand-black/10 p-6 hover:bg-brand-salmon transition-colors duration-300"
                    >
                        <div class="flex justify-between items-start mb-4">
                            <span
                                class="font-mono text-[10px] text-brand-red opacity-60"
                                >REF: 002</span
                            >
                        </div>
                        <div
                            class="aspect-[3/4] w-full overflow-hidden mb-6 rounded-[1.5rem] bg-brand-black/5"
                        >
                            <img
                                src="/miembros/chad.png"
                                alt="Chad"
                                class="w-full h-full object-cover object-top"
                                loading="lazy"
                            />
                        </div>
                        <h3
                            class="text-lg font-sans font-bold uppercase text-brand-black"
                        >
                            Chad
                        </h3>
                        <p
                            class="text-[10px] font-mono uppercase tracking-widest opacity-60"
                        >
                            Senior Associate
                        </p>
                    </article>

                    {/* 3. Gemma */}
                    <article
                        class="group relative border-r border-b border-brand-black/10 p-6 hover:bg-brand-salmon transition-colors duration-300"
                    >
                        <div class="flex justify-between items-start mb-4">
                            <span
                                class="font-mono text-[10px] text-brand-red opacity-60"
                                >REF: 003</span
                            >
                        </div>
                        <div
                            class="aspect-[3/4] w-full overflow-hidden mb-6 rounded-[1.5rem] bg-brand-black/5"
                        >
                            <img
                                src="/miembros/gemma.png"
                                alt="Gemma"
                                class="w-full h-full object-cover object-top"
                                loading="lazy"
                            />
                        </div>
                        <h3
                            class="text-lg font-sans font-bold uppercase text-brand-black"
                        >
                            Gemma
                        </h3>
                        <p
                            class="text-[10px] font-mono uppercase tracking-widest opacity-60"
                        >
                            Operations
                        </p>
                    </article>

                    {/* 4. Claudio */}
                    <article
                        class="group relative border-r border-b border-brand-black/10 p-6 hover:bg-brand-salmon transition-colors duration-300"
                    >
                        <div class="flex justify-between items-start mb-4">
                            <span
                                class="font-mono text-[10px] text-brand-red opacity-60"
                                >REF: 004</span
                            >
                        </div>
                        <div
                            class="aspect-[3/4] w-full overflow-hidden mb-6 rounded-[1.5rem] bg-brand-black/5"
                        >
                            <img
                                src="/miembros/claudio.png"
                                alt="Claudio"
                                class="w-full h-full object-cover object-top"
                                loading="lazy"
                            />
                        </div>
                        <h3
                            class="text-lg font-sans font-bold uppercase text-brand-black"
                        >
                            Claudio
                        </h3>
                        <p
                            class="text-[10px] font-mono uppercase tracking-widest opacity-60"
                        >
                            Strategic Planning
                        </p>
                    </article>

                    {/* 5. Connie */}
                    <article
                        class="group relative border-r border-b border-brand-black/10 p-6 hover:bg-brand-salmon transition-colors duration-300"
                    >
                        <div class="flex justify-between items-start mb-4">
                            <span
                                class="font-mono text-[10px] text-brand-red opacity-60"
                                >REF: 005</span
                            >
                        </div>
                        <div
                            class="aspect-[3/4] w-full overflow-hidden mb-6 rounded-[1.5rem] bg-brand-black/5"
                        >
                            <img
                                src="/miembros/connie.png"
                                alt="Connie"
                                class="w-full h-full object-cover object-top"
                                loading="lazy"
                            />
                        </div>
                        <h3
                            class="text-lg font-sans font-bold uppercase text-brand-black"
                        >
                            Connie
                        </h3>
                        <p
                            class="text-[10px] font-mono uppercase tracking-widest opacity-60"
                        >
                            Design & Art
                        </p>
                    </article>
                </div>
            </div>
            <style>
                @keyframes flicker {
                    0% {
                        opacity: 0.27861;
                    }
                    5% {
                        opacity: 0.34769;
                    }
                    10% {
                        opacity: 0.23604;
                    }
                    15% {
                        opacity: 0.90626;
                    }
                    20% {
                        opacity: 0.18128;
                    }
                    25% {
                        opacity: 0.83891;
                    }
                    30% {
                        opacity: 0.65583;
                    }
                    35% {
                        opacity: 0.57807;
                    }
                    40% {
                        opacity: 0.26593;
                    }
                    45% {
                        opacity: 0.84623;
                    }
                    50% {
                        opacity: 0.96019;
                    }
                    55% {
                        opacity: 0.08594;
                    }
                    60% {
                        opacity: 0.20313;
                    }
                    65% {
                        opacity: 0.71988;
                    }
                    70% {
                        opacity: 0.53455;
                    }
                    75% {
                        opacity: 0.37288;
                    }
                    80% {
                        opacity: 0.71428;
                    }
                    85% {
                        opacity: 0.70419;
                    }
                    90% {
                        opacity: 0.7003;
                    }
                    95% {
                        opacity: 0.36108;
                    }
                    100% {
                        opacity: 0.24387;
                    }
                }
                .animate-flicker {
                    animation: flicker 0.15s infinite;
                }

                @keyframes marquee {
                    0% {
                        transform: translateX(0);
                    }
                    100% {
                        transform: translateX(-100%);
                    }
                }
                .animate-marquee {
                    animation: marquee 30s linear infinite;
                }
                .marquee-container {
                    width: max-content;
                }
            </style>
        </section>
    </main>
</Layout>
