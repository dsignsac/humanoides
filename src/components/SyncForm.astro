<form class="w-full flex flex-col gap-6 font-sans">
    <div class="flex flex-col gap-2">
        <label
            for="name"
            class="text-xs font-bold tracking-widest uppercase text-brand-black"
            >Identity (Name)</label
        >
        <input
            type="text"
            id="name"
            name="name"
            class="w-full bg-transparent border-b border-brand-black/40 py-2 text-brand-black focus:outline-none focus:border-brand-red transition-colors text-sm placeholder:text-brand-black/30"
            placeholder="ENTER ID..."
        />
    </div>

    <div class="flex flex-col gap-2">
        <label
            for="email"
            class="text-xs font-bold tracking-widest uppercase text-brand-black"
            >Contact Point (Email)</label
        >
        <input
            type="email"
            id="email"
            name="email"
            class="w-full bg-transparent border-b border-brand-black/40 py-2 text-brand-black focus:outline-none focus:border-brand-red transition-colors text-sm placeholder:text-brand-black/30"
            placeholder="ENTER FREQUENCY..."
        />
    </div>

    <div class="flex flex-col gap-2">
        <label
            for="message"
            class="text-xs font-bold tracking-widest uppercase text-brand-black"
            >Transmission (Message)</label
        >
        <textarea
            id="message"
            name="message"
            rows="3"
            class="w-full bg-transparent border-b border-brand-black/40 py-2 text-brand-black focus:outline-none focus:border-brand-red transition-colors text-sm resize-none placeholder:text-brand-black/30"
            placeholder="INPUT DATA..."></textarea>
    </div>

    <button
        type="submit"
        class="mt-4 w-full md:w-auto self-start inline-flex items-center justify-center px-8 py-3 bg-brand-black text-brand-gray text-xs font-900 uppercase tracking-widest hover:bg-brand-red hover:text-white transition-all duration-300 rounded-full"
    >
        Execute Link
    </button>
</form>
