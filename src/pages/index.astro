---
import Layout from "../layouts/Layout.astro";
import AnimatedLogo from "../components/AnimatedLogo.astro";
---

<Layout title="Humanoides & Asociados">
    <main
        class="w-full h-screen flex flex-col justify-center items-center p-12 overflow-hidden"
    >
        <div class="w-full max-w-4xl">
            <!-- MÃ³vil: solo isotipo -->
            <div class="block sm:hidden">
                <AnimatedLogo mode="once" variant="iso" />
                <h1
                    id="mobile-title"
                    style="line-height: 0.9em;"
                    class="text-center mt-5 text-4xl font-sans opacity-0"
                >
                    Humanoides & Asociados
                </h1>
            </div>

            <!-- Tablet/Desktop: logo completo -->
            <div class="hidden sm:block">
                <AnimatedLogo mode="once" variant="full" />
            </div>
        </div>
    </main>
</Layout>
