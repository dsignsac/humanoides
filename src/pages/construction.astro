---
import Layout from "../layouts/Layout.astro";
import AnimatedLogo from "../components/AnimatedLogo.astro";
---

<Layout
    title="BAJO CONSTRUCCIÓN // HUMAN_SYNC"
    showNavbar={false}
    showFooter={false}
>
    <main
        class="w-full h-screen bg-brand-red flex flex-col items-center justify-center overflow-hidden"
    >
        <!-- CRT Effect Layer -->
        <div
            class="absolute inset-0 z-[6] pointer-events-none overflow-hidden opacity-20"
        >
            <div
                class="absolute inset-0 w-full h-full bg-[linear-gradient(rgba(18,16,16,0)_50%,rgba(0,0,0,0.25)_50%),linear-gradient(90deg,rgba(255,0,0,0.06),rgba(0,255,0,0.02),rgba(0,0,255,0.06))] bg-[length:100%_4px,3px_100%]"
            >
            </div>
            <div
                class="absolute inset-0 w-full h-full bg-transparent animate-flicker pointer-events-none"
            >
            </div>
        </div>

        <div class="relative z-10 text-center w-full max-w-4xl px-6">
            <!-- Full Logo Container -->
            <div class="w-full mb-12">
                <AnimatedLogo
                    mode="once"
                    variant="full"
                    align="center"
                    color="#D4DAD3"
                />
            </div>

            <!-- Construction Message -->
            <div class="mt-8">
                <p
                    class="text-xl md:text-3xl font-mono uppercase tracking-[0.4em] text-[#D4DAD3] opacity-80 animate-pulse-slow"
                >
                    // SITIO_BAJO_CONSTRUCCIÓN_01
                </p>
                <div class="mt-4 flex justify-center gap-4">
                    <span class="h-[2px] w-12 bg-[#D4DAD3]/30"></span>
                    <span class="h-[2px] w-12 bg-white"></span>
                    <span class="h-[2px] w-12 bg-[#D4DAD3]/30"></span>
                </div>
            </div>
        </div>

        <!-- System Loading Bar (Bottom) -->
        <div
            class="absolute bottom-12 w-64 h-[2px] bg-white/10 overflow-hidden"
        >
            <div class="h-full bg-white animate-loading-bar w-0"></div>
        </div>
    </main>
</Layout>

<style>
    @keyframes flicker {
        0% {
            opacity: 0.27861;
        }
        100% {
            opacity: 0.24387;
        }
    }
    .animate-flicker {
        animation: flicker 0.15s infinite;
    }
    .animate-pulse-slow {
        animation: pulse 4s cubic-bezier(0.4, 0, 0.6, 1) infinite;
    }
    @keyframes pulse {
        0%,
        100% {
            opacity: 0.8;
        }
        50% {
            opacity: 0.3;
        }
    }
    @keyframes loading {
        0% {
            width: 0%;
            left: 0;
        }
        50% {
            width: 100%;
            left: 0;
        }
        100% {
            width: 0%;
            left: 100%;
        }
    }
    .animate-loading-bar {
        animation: loading 3s ease-in-out infinite;
    }
</style>
