---
interface Props {
  className?: string;
}

const { className = "" } = Astro.props;
---

<div class={`skeleton-container ${className}`}>
  <div class="shimmer"></div>
</div>

<style>
  .skeleton-container {
    position: relative;
    width: 100%;
    height: 100%;
    background-color: #d4dad3; /* color-brand-gray */
    overflow: hidden;
  }

  .shimmer {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      90deg,
      rgba(212, 218, 211, 0) 0%,
      rgba(250, 42, 42, 0.05) 50%,
      rgba(212, 218, 211, 0) 100%
    );
    animation: shimmer 1.5s infinite;
    transform: translateX(-100%);
  }

  @keyframes shimmer {
    100% {
      transform: translateX(100%);
    }
  }
</style>
