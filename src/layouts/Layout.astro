---
import { ClientRouter } from "astro:transitions";
import "../styles/global.css";

interface Props {
	title?: string;
}

const { title = "HA" } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon-animated.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>

		<!-- Google Fonts: Inter & Anek Malayalam -->
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Anek+Malayalam:wght@700&family=Inter:wght@400;500;600&family=Kode+Mono:wght@400;700&display=swap"
			rel="stylesheet"
		/>

		<ClientRouter />
	</head>
	<body class="min-h-screen">
		<slot />
	</body>
</html>
