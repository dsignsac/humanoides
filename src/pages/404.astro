---
import Layout from "../layouts/Layout.astro";
import AnimatedLogo from "../components/AnimatedLogo.astro";
---

<Layout title="404 // NO ENCONTRADO" showNavbar={false} showFooter={false}>
    <main
        class="w-full h-screen bg-brand-red flex flex-col items-center justify-center overflow-hidden"
    >
        <!-- CRT Effect Layer -->
        <div
            class="absolute inset-0 z-[6] pointer-events-none overflow-hidden opacity-20"
        >
            <div
                class="absolute inset-0 w-full h-full bg-[linear-gradient(rgba(18,16,16,0)_50%,rgba(0,0,0,0.25)_50%),linear-gradient(90deg,rgba(255,0,0,0.06),rgba(0,255,0,0.02),rgba(0,0,255,0.06))] bg-[length:100%_4px,3px_100%]"
            >
            </div>
            <div
                class="absolute inset-0 w-full h-full bg-transparent animate-flicker pointer-events-none"
            >
            </div>
        </div>

        <div class="relative z-10 text-center px-6">
            <div class="w-24 md:w-32 mx-auto mb-12">
                <AnimatedLogo mode="static" variant="iso" color="#D4DAD3" />
            </div>

            <h1
                class="text-[clamp(4rem,20vw,240px)] font-sans font-800 text-[#D4DAD3] leading-none tracking-tighter mb-8"
            >
                404
            </h1>

            <p
                class="text-xl md:text-2xl font-mono uppercase tracking-[0.3em] text-[#D4DAD3] mb-12"
            >
                // ERROR: RUTA_NO_SINCRO
            </p>

            <a
                href="/"
                class="inline-block px-12 py-5 border-[3px] border-[#D4DAD3] text-[#D4DAD3] font-sans font-800 uppercase tracking-widest hover:bg-[#D4DAD3] hover:text-brand-red transition-all duration-300"
            >
                VOLVER AL INICIO
            </a>
        </div>
    </main>
</Layout>

<style>
    @keyframes flicker {
        0% {
            opacity: 0.27861;
        }
        5% {
            opacity: 0.34769;
        }
        10% {
            opacity: 0.23604;
        }
        15% {
            opacity: 0.90626;
        }
        20% {
            opacity: 0.18128;
        }
        25% {
            opacity: 0.83891;
        }
        30% {
            opacity: 0.65583;
        }
        35% {
            opacity: 0.57807;
        }
        40% {
            opacity: 0.26593;
        }
        45% {
            opacity: 0.84623;
        }
        50% {
            opacity: 0.96019;
        }
        55% {
            opacity: 0.08594;
        }
        60% {
            opacity: 0.20313;
        }
        65% {
            opacity: 0.71988;
        }
        70% {
            opacity: 0.53455;
        }
        75% {
            opacity: 0.37288;
        }
        80% {
            opacity: 0.71428;
        }
        85% {
            opacity: 0.70419;
        }
        90% {
            opacity: 0.7003;
        }
        95% {
            opacity: 0.36108;
        }
        100% {
            opacity: 0.24387;
        }
    }
    .animate-flicker {
        animation: flicker 0.15s infinite;
    }
</style>
